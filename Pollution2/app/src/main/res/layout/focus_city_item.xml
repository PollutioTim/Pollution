<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/focus_item_city_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#efeef4"
        android:text="太原市"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/focus_item_city_ll"
        android:textColor="@color/tx_gray"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/focus_item_city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:gravity="left"
            android:paddingLeft="10px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/tx_gray"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/focus_item_select_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:visibility="visible"
            android:src="@mipmap/ic_select"
            android:layout_gravity="center"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>