<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/weather_background"
    tools:context="com.tim.pollution.activity.CityContrastActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="城市对比"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/color_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/city_contrast_sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Spinner>

            <Spinner
                android:id="@+id/city_contrast_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                ></Spinner>

            <Spinner
                android:id="@+id/city_contrast_sp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               ></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/city_contrast_chart"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_height="300dp"
                android:layout_margin="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:text="12H"
                    android:background="#FF9DD4D6"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@mipmap/bbd"/>
                <TextView
                    android:id="@+id/city_contrast_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:text="AQI 14:00\n太原 255\n大同 100\n临汾 150"
                    android:layout_marginTop="5dp"
                    android:background="#FF9DD4D6"
                   android:padding="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/city_contrast_rg_type"
            android:layout_width="match_parent"
            android:checkedButton="@+id/city_contrast_rbpm25_type"
            android:layout_height="wrap_content"
            android:background="#FF42969D"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/city_contrast_rbpm25_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="PM2.5"
                android:textColor="@drawable/white_green_selector" />

            <RadioButton
                android:id="@+id/city_contrast_rbpm10_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@drawable/white_green_selector"
                android:button="@null"
                android:text="PM10"
                />
            <RadioButton
                android:id="@+id/city_contrast_rbso2_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@drawable/white_green_selector"
                android:button="@null"
                android:text="SO2"/>
            <RadioButton
                android:id="@+id/city_contrast_rbno2_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:button="@null"
                android:textColor="@drawable/white_green_selector"
                android:text="NO2"/>
            <RadioButton
                android:id="@+id/city_contrast_rbo3_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@drawable/white_green_selector"
                android:button="@null"
                android:text="O₃"
                />
            <RadioButton
                android:id="@+id/city_contrast_rbco_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@drawable/white_green_selector"
                android:button="@null"
                android:text="CO"/>
        </RadioGroup>
        <com.tim.pollution.view.WrapContentListView
            android:id="@+id/city_contrast_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>
