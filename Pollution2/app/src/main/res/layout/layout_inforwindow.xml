<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7e454545"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/marker_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小店区"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/marker_point_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国控站点"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09：00更新"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="AQI"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>

                    <TextView
                        android:id="@+id/marker_aqi_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2.5"
                            android:textSize="12sp"
                            android:textColor="@color/color_white"/>
                        <TextView
                            android:id="@+id/marker_pm2_5_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/color_white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="12sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/marker_pm_10_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="12sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/marker_no_2_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SO"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="12sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/marker_so_2_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="3      "
                        android:textSize="12sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/marker_o_3_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="CO"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/marker_co_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="风"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>

                    <TextView
                        android:id="@+id/marker_feng_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="风向"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>

                    <TextView
                        android:id="@+id/marker_fengxiang_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="气压"
                        android:textSize="14sp"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/marker_air_pressure_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="气温"
                    android:textSize="14sp"
                    android:textColor="@color/color_white"/>

                <TextView
                    android:id="@+id/marker_temperature_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="湿度"
                    android:textSize="14sp"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/marker_humidity_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>