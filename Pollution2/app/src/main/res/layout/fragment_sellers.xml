<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gree_blue">

        <TextView
            android:id="@+id/sellers_station_tv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="站点+"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:text="排名"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/sellers_swicth_tv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/ic_switch"
            android:text="国控"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/now_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/now_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tx_gray"
                    android:text="实时"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />
                <View
                    android:id="@+id/now_view"
                    android:layout_width="38dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:background="@color/color_white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/all_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/all_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tx_gray"
                    android:text="累计排"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />
                <View
                    android:id="@+id/all_view"
                    android:layout_width="38dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:background="@color/color_white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/yesterday_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/yesterday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tx_gray"
                    android:text="昨日排"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />
                <View
                    android:id="@+id/yesterday_view"
                    android:layout_width="38dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:background="@color/color_white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/last_ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/last_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tx_gray"
                    android:text="上月排"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />
                <View
                    android:id="@+id/last_view"
                    android:layout_width="38dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:background="@color/color_white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_below_ll"
            android:layout_below="@+id/title_ll"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:id="@+id/item_number_type_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/color_gray"
                android:text="排名"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_city_type_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/color_gray"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="城市"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_pollution_type_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="首要污染物"
                android:textColor="@color/color_gray"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_rank_type_tv"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="AQI"
                    android:textSize="12sp"
                    android:textColor="@color/color_gray"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/ic_top_switch"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_below_ll"
            android:layout_above="@+id/bottom_ll">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/sellers_recyview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/sellers_month_recyview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/black"
            android:weightSum="7"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/index_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指数"
                android:clickable="true"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@drawable/selector_white_green"
                />
            <LinearLayout
                android:id="@+id/sellers_pm_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellers_pm_25_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/sellers_2_5_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sellers_pm_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellers_pm_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/sellers_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sellers_no_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellers_no_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/sellers_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sellers_so_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellers_so_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SO"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/sellers_so_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sellers_o_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellers_o_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/sellers_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/sellers_co_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CO"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@drawable/selector_white_green"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>