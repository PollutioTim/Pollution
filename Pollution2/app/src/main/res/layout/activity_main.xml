<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tim.pollution.MainActivity">

    <com.tim.pollution.view.CustomViewPager
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/home_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:checkedButton="@+id/home_main"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/home_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/home_selecter"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:tag="{0,10,0,10}(24)"
            android:text="首页"
            android:textColor="@color/color_white"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/home_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:singleLine="true"
            android:tag="{0,10,0,10}(24)"
            android:text="地图"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/map_selecter"
            android:textColor="@color/color_white"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/home_sellers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/sort_selecter"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:tag="{0,10,0,10}(24)"
            android:text="排名"
            android:textColor="@color/color_white"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/home_pk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/pk_selecter"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:tag="{0,10,0,10}(24)"
            android:text="对比"
            android:textColor="@color/color_white"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/home_about"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/about_selecter"
            android:textColor="@color/color_white"
            android:textSize="24px"
            android:tag="{0,10,0,10}(24)"
            android:singleLine="true"
            android:text="关于" />

    </RadioGroup>

</LinearLayout>
