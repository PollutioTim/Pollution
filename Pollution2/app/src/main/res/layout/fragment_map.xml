<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gree_blue">

        <TextView
            android:id="@+id/map_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="08.04.03  15:00"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:text="地图"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/map_swicth_tv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:drawablePadding="2dp"
            android:drawableLeft="@mipmap/ic_switch"
            android:text="城市"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/fg_mTexturemap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.baidu.mapapi.map.MapView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#7e7a7a7a"
            android:weightSum="7"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/map_aqi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AQI"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                />

            <LinearLayout
                android:id="@+id/pm_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pm_25_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/map_2_5_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/pm_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pm_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/map_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/no_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/no_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/map_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/so_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/so_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SO"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/map_so_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/o_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/o_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/gree_blue"
                    />
                <TextView
                    android:id="@+id/map_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/gree_blue"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/co_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CO"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/gree_blue"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/map_recyview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7e7a7a7a"
            android:layout_gravity="center|left"/>
        

    </FrameLayout>

</LinearLayout>