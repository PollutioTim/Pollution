<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gree_blue"
      >

        <TextView
            android:id="@+id/map_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text="08.04.03  15:00"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:text="地图"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/map_swicth_tv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:drawablePadding="2dp"
            android:drawableLeft="@mipmap/ic_switch"
            android:text="城市"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<com.baidu.mapapi.map.MapView-->
            <!--android:id="@+id/fg_mTexturemap"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
        <!--</com.baidu.mapapi.map.MapView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#7e7a7a7a"
            android:weightSum="6"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指数"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@drawable/selector_white_gree"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@drawable/selector_white_gree"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@drawable/selector_white_gree"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@drawable/selector_white_gree"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@drawable/selector_white_gree"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SO"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@drawable/selector_white_gree"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@drawable/selector_white_gree"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@drawable/selector_white_gree"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="10sp"
                    android:layout_gravity="bottom|center"
                    android:textColor="@drawable/selector_white_gree"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CO"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@drawable/selector_white_gree"
                />

        </LinearLayout>



    </FrameLayout>

</LinearLayout>